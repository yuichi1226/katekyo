<h1>Mypage#index</h1>
<p>Find me in app/views/mypage/index.html.erb</p>
<%= link_to 'ログアウト', destroy_user_session_path, :method => :delete %>
<%= link_to '質問を投稿', new_user_question_path(@user) %>

<p><%= @info.nickname %></p>
<p><%= @info.first_name %></p>
<p><%= @info.last_name %></p>
<p><%= @info.birthday %></p>
<table border=1>
	<tr>
		<th>タイトル</th>
		<th>ポイント</th>
		<th>操作</th>
	</tr>

	<% @my_questions.each do |q| %>
	<tr>
		<td><%= q.title %></td>
		<td><%= q.point %></td>
		<td><%= link_to "編集", edit_user_question_path(:user_id,q) %>
			<%= link_to "詳細", user_question_path(:user_id,q) %>
			<%= link_to "削除", user_question_path(:user_id,q), method: :delete, data: {confirm: "本当に削除しますか？"} %>
		</td>

	</tr>
	<% end %>